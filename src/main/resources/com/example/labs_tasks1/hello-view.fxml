<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.labs_tasks1.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeText"/>
  <ImageView fx:id="imageView" fitWidth="400" preserveRatio="true"/>

  <HBox alignment="CENTER" spacing="10.0">
    <Button fx:id="btnFirst" text="В начало" onAction="#onFirstButtonClick"/>
    <Button fx:id="btnPrev" text="Назад" onAction="#onPrevButtonClick"/>
    <Button fx:id="btnAuto" text="Автопросмотр" onAction="#onAutoButtonClick"/>
    <Button fx:id="btnPause" text="Пауза" onAction="#onPauseButtonClick"/>
    <Button fx:id="btnNext" text="Вперёд" onAction="#onNextButtonClick"/>
    <Button fx:id="btnLast" text="В конец" onAction="#onLastButtonClick"/>
  </HBox>

  <ProgressBar fx:id="progressBar" prefWidth="400"/>

  <Button fx:id="btnChooseDir" text="Выбрать папку" onAction="#onChooseDirButtonClick"/>
</VBox>